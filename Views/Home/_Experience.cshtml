@model List<jasper_portfolio.Models.ExperienceEntry>

<section id="experience" class="section-experience">
    <div class="experience-card">
        <h2><i class="fas fa-briefcase"></i> Experience</h2>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var exp in Model)
            {
                <div class="experience-entry">
                    <h3>
                        @exp.Company
                        @if (!string.IsNullOrEmpty(exp.Validation))
                        {
                            <span class="validation">[@exp.Validation]</span>
                        }
                    </h3>
                    <p class="position">@exp.Position</p>
                    <p class="duration-location">
                        <span class="duration">@exp.Duration</span> |
                        <span class="location">@exp.Location</span>
                    </p>
                    <ul class="experience-bullets">
                        @foreach (var bullet in exp.BulletPoints)
                        {
                            <li>@bullet</li>
                        }
                    </ul>
                </div>
            }
        }
        else
        {
            <p>No experience information available.</p>
        }
    </div>
</section>
